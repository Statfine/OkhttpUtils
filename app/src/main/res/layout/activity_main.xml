<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:text="Okhttp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/get_requst"/>

    <Button
        android:id="@+id/get_requst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="原生Get"
        android:layout_below="@+id/tv_title"/>

    <Button
        android:id="@+id/post_requst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="原生post"
        android:layout_below="@+id/get_requst"/>

    <Button
        android:id="@+id/get_requst_util"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="封装后的Get"
        android:layout_below="@+id/post_requst"/>

    <Button
        android:id="@+id/post_requst_util"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="封装后的post"
        android:layout_below="@+id/get_requst_util"/>

    <Button
        android:id="@+id/img_requst_util"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="封装后的获取图片"
        android:layout_below="@+id/post_requst_util"/>

    <Button
        android:id="@+id/file_requst_util"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="封装后的上传下载"
        android:layout_below="@+id/img_requst_util"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/file_requst_util">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_show"
                android:text="Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
